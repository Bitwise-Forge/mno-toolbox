{
  "compilerOptions": {
    /** Base Options */
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "paths": { "@/*": ["./src/*"], "~/*": ["./tests/*"] },
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",

    /** Strictness */
    "checkJs": true,
    "noUncheckedIndexedAccess": false,
    "strict": true,

    /** Transpile using Bundler (not tsc) */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitOverride": true
  },
  "include": ["src", "tests", "*.js", "vitest.config.ts", ".husky/install.js"],
  "exclude": ["node_modules"]
}
